{
    "name": "iis-start",
    "private": true,
    "scripts": {
        "start": "NODE_ENV=development node_modules/webpack/bin/webpack.js --watch --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
        "production": "NODE_ENV=production node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
        "sassdoc": "sassdoc resources/scss --dest resources/sassdoc",
        "eslint": "eslint resources/**/*.js",
        "sasslint": "node ./node_modules/.bin/sass-lint -v -q",
        "phplint": "phpcs -p --standard=wordpress-rules.xml **/*.php",
        "lint": "yarn run eslint && yarn run sasslint && yarn run phplint"
    },
    "devDependencies": {
        "babel-eslint": "^9.0.0",
        "babel-preset-env": "^1.7.0",
        "browser-sync": "^2.24.7",
        "browser-sync-webpack-plugin": "2.0.1",
        "eslint": "^5.6.0",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-plugin-import": "^2.14.0",
        "laravel-mix": "^2.1.14",
        "sass-lint": "^1.12.1",
        "sassdoc": "^2.5.0",
        "webpack-shell-plugin": "^0.5.0"
    }
}
